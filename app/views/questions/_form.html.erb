<%= question_header(@question) %>
<%= render 'shared/errors', obj: @question %>

<div class="row">
  <div class="col-xs-12">
    <%= form_with (model: [@test, @question], local: true do |f| %>
      <div class="form-group">
        <div class="control-label col-sm-2">
          <%= f.label :body %>
        </div>
        <div class="col-sm-8">
          <%= f.text_field :body, class: "form-control", placeholder: "Title of question", autofocus: true %>
        </div>
      </div>
      <br>
      <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
          <%= f.submit class: "btn btn-primary btn-lg" %>
        </div>
      </div>
    <% end %>
    <div class="col-xs-4 col-xs-offset-4">
      [ <%= link_to "Cancel", tests_path %> ]
    </div>
  </div>
</div>
