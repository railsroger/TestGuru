<div class="row justify-content-center">
  <div class="col-md-6 col-md-offset-3">
    <div class="signup-form">

      <h2><%= t('.signup') %></h2>

      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <div class="form-group">
          <%= devise_error_messages! %>
          <p>
            <%= f.label :first_name %><br />
            <%= f.text_field :first_name, autofocus: true, placeholder: "First Name", class: 'form-control' %>
          </p>

          <p>
            <%= f.label :last_name %><br />
            <%= f.text_field :last_name, autofocus: true, placeholder: "Last Name", class: 'form-control' %>
          </p>

          <p>
            <%= f.label :email %><br />
            <%= f.email_field :email, autofocus: true, placeholder: "E-mail", class: 'form-control' %>
          </p>

          <p>
            <%= f.label :password %>
            <% if @minimum_password_length %>
              <em>(<%= @minimum_password_length %> characters minimum)</em>
            <% end %><br />
            <%= f.password_field :password, id: "password", autocomplete: "off", placeholder: "Password", class: 'form-control', onkeyup: 'checkPassword();' %>
          </p>

          <p>
            <%= f.label :password_confirmation %><br />
            <%= f.password_field :password_confirmation, id: "password_confirmation", autocomplete: "off", placeholder: "Confirmation", class: 'form-control', onkeyup: 'checkPassword();' %></br>
             <span id='message'></span>
          </p>
          <br>

          <div class="form-actions">
            <%= f.submit t('.signup'), class: "btn-custom2" %>
          </div>
        </div>
      <% end %>

      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
