<h2 align="center"><%= t('.title') %> <%= @question.test.title %></h2>
<div class="well col-xs-8 col-xs-offset-2">
  <hr
  <h4 class="center description"><strong><%= t('.question') %></strong></h4>
  <hr>
  <%= @question.body %>
  <h4 class="center description"><strong><%= t('.answers') %></strong></h4>
  <hr>
  <%= link_to t('.new_answer'), new_admin_question_answer_path(@question) %>
  <ol>
    <%= render @question.answers %>
  </ol>
  <div class="article-actions">
    <%= link_to t('.edit'), edit_admin_question_path(@question) %> |
    <%= link_to t('.back_to_test'), admin_test_path(@question.test), class: "btn btn-xs btn-success" %>
  </div>
</div>
