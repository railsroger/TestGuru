<%= render 'shared/errors', obj: @answer %>

<%= form_with model: [@question, @answer], local: true do |form| %>
  <p>
    <%= form.label :title %><br>
    <%= form.text_area :title, id: :answer_body, rows: 7, cols: 60 %>
  </p>

  <p>
    <%= form.label :correct %>
    <%= form.check_box :correct, id: :answer_correct %>
  </p>


  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
